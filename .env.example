# ===========================================
# Server Health Bot Configuration
# ===========================================

# --- Telegram ---
# Получить у @BotFather
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrSTUvwxYZ

# Твой Telegram ID (получить у @userinfobot)
ADMIN_ID=123456789

# --- Database ---
DATABASE_PATH=./data/servers.db

# --- SSH Defaults ---
SSH_TIMEOUT=30
SSH_KEY_PATH=~/.ssh/id_rsa

# --- Scheduler ---
# Интервал полной проверки (часы)
CHECK_INTERVAL_HOURS=6

# Интервал быстрой проверки для алертов (минуты)
ALERT_CHECK_INTERVAL_MINUTES=15

# --- Thresholds (пороговые значения в %) ---
CPU_WARNING=70
CPU_CRITICAL=90

RAM_WARNING=70
RAM_CRITICAL=85

DISK_WARNING=70
DISK_CRITICAL=85

SWAP_WARNING=30
SWAP_CRITICAL=50

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log
